{
    "tasks": [
        {
            "type": "shell",
            "label": "[OpenGL] g++.exe build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-lopengl32",
                "-lglew32",
                "-lfreeglut",
                "-lglu32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}